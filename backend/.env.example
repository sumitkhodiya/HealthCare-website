# Copy this to .env and fill in your values
# ── Django Core ───────────────────────────────────────────────────────────────
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=medivault-backend.onrender.com,localhost
CSRF_TRUSTED_ORIGINS=https://medivault-backend.onrender.com,https://medivault-frontend.onrender.com

# ── Database ──────────────────────────────────────────────────────────────────
# Set by Render automatically when you link a PostgreSQL database
DATABASE_URL=postgres://user:password@host:port/dbname

# ── CORS ──────────────────────────────────────────────────────────────────────
CORS_ALLOWED_ORIGINS=https://medivault-frontend.onrender.com,http://localhost:3000

# ── Email (Gmail SMTP) ────────────────────────────────────────────────────────
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-gmail-app-password
DEFAULT_FROM_EMAIL=MediVault <noreply@medivault.app>

# ── SMS (Fast2SMS) ────────────────────────────────────────────────────────────
FAST2SMS_API_KEY=your-fast2sms-api-key
